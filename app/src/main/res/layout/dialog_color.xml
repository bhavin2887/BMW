<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp">

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="5dp"
                android:text="Your Bag ID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_kg_bagid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:editable="false"
                android:hint="Enter Bag ID"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/edit_bag1_return"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"></EditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="5dp"
                android:text="Enter Kg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edit_kg_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:hint="@string/enter_kg"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/edit_bag1_return"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"></EditText>

            <EditText
                android:id="@+id/edit_bag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:hint="@string/enter_bags"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusDown="@+id/edit_kg_1"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:visibility="gone" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_color_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>
